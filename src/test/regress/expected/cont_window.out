CREATE CONTINUOUS VIEW cqwindow0 AS SELECT key::text, SUM(x::numeric) OVER (PARTITION BY key ROWS BETWEEN 1 PRECEDING AND 1 FOLLOWING) FROM cqwindow_stream;
\d+ cqwindow0_mrel;
                                  Table "public.cqwindow0_mrel"
      Column       |           Type           | Modifiers | Storage  | Stats target | Description 
-------------------+--------------------------+-----------+----------+--------------+-------------
 arrival_timestamp | timestamp with time zone |           | plain    |              | 
 key               | text(0)                  |           | extended |              | 
 sum               | bytea                    |           | extended |              | 
Indexes:
    "cqwindow0_mrel_expr_idx" btree (ls_hash_group(arrival_timestamp, key))
Options: fillfactor=50

\d+ cqwindow0;
          Continuous view "public.cqwindow0"
 Column |  Type   | Modifiers | Storage  | Description 
--------+---------+-----------+----------+-------------
 key    | text(0) |           | extended | 
 sum    | numeric |           | main     | 
View definition:
 SELECT key::text,
    sum(x::numeric) OVER (PARTITION BY key::text ROWS BETWEEN 1 PRECEDING AND 1 FOLLOWING) AS sum
   FROM ONLY cqwindow_stream;

SELECT pipeline_get_overlay_viewdef('cqwindow0');
                                                                                      pipeline_get_overlay_viewdef                                                                                       
---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
  SELECT cqwindow0_mrel.key,                                                                                                                                                                            +
     pg_catalog.numeric_sum(combine(naggstaterecv(cqwindow0_mrel.sum)) OVER (PARTITION BY cqwindow0_mrel.key ORDER BY cqwindow0_mrel.arrival_timestamp ROWS BETWEEN 1 PRECEDING AND 1 FOLLOWING)) AS sum+
    FROM cqwindow0_mrel;
(1 row)

