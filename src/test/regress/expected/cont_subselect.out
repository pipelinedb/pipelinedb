CREATE CONTINUOUS VIEW tracked_ips_1_hour AS
  SELECT MAX((payload->>'Contact')::TIMESTAMP) _max_age_contact,
    MIN((payload->>'Contact')::TIMESTAMP) _min_age_contact,
    COUNT(*) _cnt_hits,
    SUBSTRING(payload->>'Url','(\.[^.]*$|$)'::text) _requested_extension,
    COUNT(ip) _cnt_ip
