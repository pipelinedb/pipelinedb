SET debug_sync_stream_insert = 'on';
-- json_agg
CREATE CONTINUOUS VIEW test_json_agg AS SELECT key::text, json_agg(tval::text) AS j0, json_agg(fval::float8) AS j1, json_agg(ival::integer) AS j2 FROM stream GROUP BY key;
ACTIVATE test_json_agg;
INSERT INTO stream (key, tval, fval, ival) VALUES ('x', 'text', 0.01, 42), ('x', 'more text', 0.01, 42), ('x', 'blaahhhh', 0.01, 42);
INSERT INTO stream (key, tval, fval, ival) VALUES ('y', '4.2', 1.01, 42), ('z', '\"quoted\"', 2.01, 42), ('x', '', 0.01, 42), ('z', '2', '3', '4');
DEACTIVATE;
SELECT key, j0 FROM test_json_agg ORDER BY key;
 key |                  j0                   
-----+---------------------------------------
 x   | ["", "text", "more text", "blaahhhh"]
 y   | ["4.2"]
 z   | ["\\\"quoted\\\"", "2"]
(3 rows)

SELECT key, j1 FROM test_json_agg ORDER BY key;
 key |            j1            
-----+--------------------------
 x   | [0.01, 0.01, 0.01, 0.01]
 y   | [1.01]
 z   | [2.01, 3]
(3 rows)

SELECT key, j2 FROM test_json_agg ORDER BY key;
 key |        j2        
-----+------------------
 x   | [42, 42, 42, 42]
 y   | [42]
 z   | [42, 4]
(3 rows)

ACTIVATE test_json_agg;
INSERT INTO stream (key, tval, fval, ival) VALUES ('x', 'text', 0.01, 42), ('y', 'more text', 0.01, 42), ('z', 'blaahhhh', 0.01, 42);
DEACTIVATE;
SELECT j0 FROM test_json_agg ORDER BY key;
                      j0                       
-----------------------------------------------
 ["text", "", "text", "more text", "blaahhhh"]
 ["more text", "4.2"]
 ["blaahhhh", "\\\"quoted\\\"", "2"]
(3 rows)

SELECT j1 FROM test_json_agg ORDER BY key;
               j1               
--------------------------------
 [0.01, 0.01, 0.01, 0.01, 0.01]
 [0.01, 1.01]
 [0.01, 2.01, 3]
(3 rows)

SELECT j2 FROM test_json_agg ORDER BY key;
          j2          
----------------------
 [42, 42, 42, 42, 42]
 [42, 42]
 [42, 42, 4]
(3 rows)

