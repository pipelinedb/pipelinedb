-- bytea_string_agg, string_agg
CREATE CONTINUOUS VIEW test_bstring_agg AS SELECT k::text, string_agg(v::bytea, '00000') FROM stream GROUP by k;
CREATE CONTINUOUS VIEW test_string_agg AS SELECT k::text, string_agg(v::text, k::text) FROM stream GROUP by k;
ACTIVATE test_bstring_agg;
ACTIVATE test_string_agg;
INSERT INTO stream (k, v) VALUES ('x', 'val0'), ('x', 'val1'), ('x', ''), ('x', 'val2');
INSERT INTO stream (k, v) VALUES ('y', 'val0'), ('y', 'val1'), ('y', ''), ('y', 'val2');
DEACTIVATE;
SELECT * FROM test_bstring_agg ORDER BY k;
 k |                        string_agg                        
---+----------------------------------------------------------
 x | \x76616c30303030303076616c313030303030303030303076616c32
 y | \x76616c30303030303076616c313030303030303030303076616c32
(2 rows)

SELECT * FROM test_string_agg ORDER BY k;
 k |   string_agg    
---+-----------------
 x | val0xval1xxval2
 y | val0yval1yyval2
(2 rows)

ACTIVATE test_bstring_agg;
INSERT INTO stream (k, v) VALUES ('x', 'val3');
INSERT INTO stream (k, v) VALUES ('z', 'val4');
DEACTIVATE;
SELECT * FROM test_bstring_agg ORDER BY k;
 k |                                 string_agg                                 
---+----------------------------------------------------------------------------
 x | \x76616c33303030303076616c30303030303076616c313030303030303030303076616c32
 y | \x76616c30303030303076616c313030303030303030303076616c32
 z | \x76616c34
(3 rows)

SELECT * FROM test_string_agg ORDER BY k;
 k |   string_agg    
---+-----------------
 x | val0xval1xxval2
 y | val0yval1yyval2
(2 rows)

